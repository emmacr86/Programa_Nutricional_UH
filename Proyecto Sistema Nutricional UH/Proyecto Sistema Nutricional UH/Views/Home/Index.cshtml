@model Proyecto_Sistema_Nutricional_UH.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sistema Nutrional UH | Login</title>
    <link rel="Icon" href="~/Images/icono.ico">
    <link href="~/Css/stylesheet-login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header text-white">
                    <img src="~/Images/uhLogo.png" id="logo" />
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>
    <main>
        <!-- section -->
        <section>
            <div class="container-fluid text-center">
                <div class="row content">
                    <div class="col-sm-5">
                    </div>
                    <div class="col-sm-2 text-center text-white">
                        <img src="~/Images/user.png" />
                        <div class="form-group">
                            @using (Html.BeginForm())
                            { @Html.ValidationSummary()
                                <div class="form-group">
                                    <label>Cédula:</label>
                                    @Html.TextBoxFor(x => x.cedula, new { @class = "form-control", @placeholder = "Ingrese su Cédula", @required = "required", @type = "number" })
                                </div>
                                <div class="form-group">
                                    <label>Contraseña:</label>
                                    @Html.TextBoxFor(x => x.contrasena, new { @class = "form-control", @type = "password", @placeholder = "Ingrese su contraseña", @required = "required" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success pad">Ingresar</button>
                                    <label class="text-white">@ViewBag.mensaje</label>
                                </div>
                            }
                        </div>
                        <div class="form-group">
                            <label for="account">No tiene una cuenta?</label>
                            @Html.ActionLink("Registrarme", "RegistroUsuario")
                        </div>
                    </div>
                    <div class="col-sm-5">
                    </div>
                </div>
            </div>
        </section>
        <!-- section -->
    </main>
    <!-- Footer -->
    <footer class="page-footer font-small blue">
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright:
            <a href="https://uh.ac.cr/" target="_blank"> Universidad Hispanoamericana</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
</body>
</html>