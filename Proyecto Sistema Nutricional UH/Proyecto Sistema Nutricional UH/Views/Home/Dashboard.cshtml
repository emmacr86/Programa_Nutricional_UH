@model Proyecto_Sistema_Nutricional_UH.Models.Usuario


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sistema Nutrional UH | Dashboard</title>
    <link rel="Icon" href="~/Images/icono.ico">
    <link href="~/Css/stylesheet-login.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Css/style-chart.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link href="~/Css/style-buttons.css" rel="stylesheet" />
    <link href="~/Css/grafico-seguimiento.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header text-white">
                    <img src="~/Images/uhLogo.png" id="logo" />
                </div>
            </div>
        </nav>
        <!-- Navbar -->
    </header>
    <main>
        <!-- section -->
        <section>
            <div class="container-fluid text-center">
                <div class="row content">
                    <div class="col-sm-1">
                    </div>
                    <div class="col-sm-6 text-center text-white">
                        <div class="form-group">
                            <span id="graphValues">3,5,5,8,9,10,7</span><br>
                            <span id="graphLabels">Lunes, martes, miercoles, jueves, viernes, sabado, domingo</span><br>
                            <span id="axisTitles">Fechas, Peso</span><br>
                            <div id="debug"></div>
                        </div>
                    </div>
                    <div class="col-sm-5">
                        <h1 class="text-white">Bienvenido @Model.nombre @Model.apellidos!!! </h1>
                        <h3 class="text-white text-center"><br>Sus datos Actuales:</h3>
                        <table class="table-hover" width="400" cellpadding="3" cellspacing="0" border="0" align="center">
                            <thead>
                                <tr class="text-center">
                                    <th class="text-center">Nombre</th>
                                    <th class="text-center">Apellido</th>
                                    <th class="text-center">Sexo</th>
                                    <th class="text-center">Edad</th>
                                    <th class="text-center">Estatura</th>
                                    <th class="text-center">Peso</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                <tr>
                                    <td class="text-center">@Model.nombre</td>
                                    <td class="text-center">@Model.apellidos</td>
                                    <td class="text-center">@Model.sexo</td>
                                    <td class="text-center">@Model.edad</td>
                                    <td class="text-center">@Model.estatura</td>
                                    <td class="text-center">@Model.peso</td>
                                </tr>
                            </tbody>
                        </table>
                        <br>
                        <h6 class="text-white text-left">Su tasa metabolica basal es de: @Model.tasaMetabolicaBasal<br></h6>
                        <h6 class="text-white text-left">Y su cuerpo requiere ingerir alimentos diarios de @Model.caloriasNecesarias calorias<br><br></h6>
                        <input type="button" value="Realizar Nueva Dieta" class="btn btn-success" onclick="@("window.location.href='" + @Url.Action("ControlNutricional", "Home") + "'");" />
                    </div>
                </div>
            </div>
        </section>
        <!-- section -->
    </main>
    <!-- Footer -->
    <footer class="page-footer font-small blue">
        <!-- Copyright -->
        <div class="footer-copyright text-center py-3">
            © 2019 Copyright:
            <a href="https://uh.ac.cr/" target="_blank"> Universidad Hispanoamericana</a>
        </div>
        <!-- Copyright -->
    </footer>
    <!-- Footer -->
    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
    <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/85280/debug.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Scripts/grafico-nuevo.js"></script>
</body>
</html>
